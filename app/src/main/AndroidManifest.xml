<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.sigadmin">

    <permission android:name="INTERNET"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".layouts.login.NewPassword">
        </activity>
        <activity android:name=".layouts.login.ForgetPassword">
        </activity>
        <activity android:name=".layouts.admin.UpdateAdminActivity">
        </activity>
        <activity android:name=".layouts.admin.AdminInfoActivity">
        </activity>
        <activity android:name=".layouts.info.field.UpdateFieldActivity"/>
        <activity
                android:name=".layouts.info.main.MainFragmentActivity"
                android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".layouts.login.LoginActivity"
                  android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".layouts.info.place.UpdatePlaceActivity"/>
        <activity android:name=".layouts.info.field.ReadFieldDetailActivity"/>
        <activity android:name=".layouts.info.field.CreateFieldActivity"/>
        <activity android:name=".layouts.home.HomeAdminActivity"/>
        <activity android:name=".layouts.info.place.CreatePlaceActivity"/>
        <activity android:name=".layouts.register.RegisterActivity"
                  android:theme="@style/AppTheme.NoActionBar">

            <!-- android:theme="@style/Theme.AppCompat.Light.NoActionBar"> -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>