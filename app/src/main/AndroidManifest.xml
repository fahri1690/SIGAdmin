<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.example.sigadmin">

    <uses-permission android:name="INTERNET" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".layouts.admin.NewPassword" />
        <activity android:name=".layouts.admin.ForgetPassword" />
        <activity android:name=".layouts.admin.UpdateAdminActivity" />
        <activity android:name=".layouts.admin.AdminInfoActivity" />
        <activity
                android:name="com.example.sigadmin.layouts.field.UpdateFieldActivity"
                android:label="Update Lapangan" />
        <activity
                android:name=".layouts.main.MainFragmentActivity"
                android:theme="@style/AppTheme.NoActionBar" />
        <activity
                android:name="com.example.sigadmin.layouts.place.UpdatePlaceActivity"
                android:label="Update Tempat Futsal" />
        <activity
                android:name="com.example.sigadmin.layouts.field.FieldDetailActivity"
                android:label="Detail Lapangan" />
        <activity
                android:name="com.example.sigadmin.layouts.field.CreateFieldActivity"
                android:label="Input Data Lapangan" />
        <activity
                android:name=".layouts.admin.RegisterActivity"
                android:theme="@style/AppTheme.NoActionBar" />
        <activity
                android:name="com.example.sigadmin.layouts.place.CreatePlaceActivity"
                android:label="Input Data Tempat Futsal" />
        <activity
                android:name=".layouts.home.HomeAdminActivity"
                android:theme="@style/AppTheme.NoActionBar" />
        <activity
                android:name=".layouts.admin.LoginActivity"
                android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>