<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/default_padding"
        android:orientation="vertical"
        tools:context=".layouts.admin.AdminInfoActivity">

    <!--Nama Admin-->

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="@dimen/widthsize_subfielddetail"
                      android:layout_height="wrap_content"
                      android:text="@string/nama_admin"
                      android:textStyle="bold"
                      android:textSize="@dimen/textsize_fielddetail"
                      android:layout_marginBottom="@dimen/default_margin"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/titik2"
                      android:textSize="@dimen/textsize_fielddetail"
                      android:textStyle="bold"
                      android:layout_marginBottom="@dimen/default_margin"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv_nama_admin"
                      android:textSize="@dimen/textsize_fielddetail"
                      android:layout_marginLeft="@dimen/default_margin"
                      android:layout_marginBottom="@dimen/default_margin"/>

        </LinearLayout>
    </LinearLayout>

    <!--email-->

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="@dimen/widthsize_subfielddetail"
                      android:layout_height="wrap_content"
                      android:text="@string/tv_email"
                      android:textSize="@dimen/textsize_fielddetail"
                      android:textStyle="bold"
                      android:layout_marginBottom="@dimen/default_margin"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/titik2"
                      android:textSize="@dimen/textsize_fielddetail"
                      android:textStyle="bold"
                      android:layout_marginBottom="@dimen/default_margin"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv_email_admin"
                      android:textSize="@dimen/textsize_fielddetail"
                      android:layout_marginLeft="@dimen/default_margin"
                      android:layout_marginBottom="@dimen/default_margin"/>
        </LinearLayout>

    </LinearLayout>

    <!--no telepon-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="@dimen/widthsize_subfielddetail"
                      android:layout_height="wrap_content"
                      android:text="@string/tv_notelp_admin"
                      android:textSize="@dimen/textsize_fielddetail"
                      android:textStyle="bold"
                      android:layout_marginBottom="@dimen/default_margin"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/titik2"
                      android:textSize="@dimen/textsize_fielddetail"
                      android:textStyle="bold"
                      android:layout_marginBottom="@dimen/default_margin"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv_notelp_admin"
                      android:textSize="@dimen/textsize_fielddetail"
                      android:layout_marginLeft="@dimen/default_margin"
                      android:layout_marginBottom="@dimen/default_margin"/>
        </LinearLayout>

    </LinearLayout>

    <Button android:id="@+id/btn_perbarui_admin"
            android:textAllCaps="false"
            android:background="@drawable/button_layout"
            android:textColor="@color/buttonTextColor"
            android:layout_gravity="end"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/btn_perbarui"/>

</LinearLayout>