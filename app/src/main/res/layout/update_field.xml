<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".layouts.UpdateField">

        <LinearLayout
                android:padding="@dimen/default_padding"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

            <ImageView android:src="@drawable/ic_add_image"
                       android:background="@drawable/img_bg"
                       android:layout_width="match_parent"
                       android:id="@+id/img_update_field"
                       android:layout_height="@dimen/image_view_height"
                       android:layout_marginBottom="@dimen/default_margin"/>

            <EditText android:layout_marginTop="@dimen/default_margin"
                      android:id="@+id/et_update_field_name"
                      android:inputType="text"
                      android:background="@drawable/outline_stroke"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="@dimen/default_margin"/>

            <EditText android:id="@+id/et_update_facility"
                      android:inputType="text"
                      android:background="@drawable/outline_stroke"
                      android:lineSpacingExtra="@dimen/default_margin"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="@dimen/default_margin"/>

            <EditText android:id="@+id/et_update_jam_buka"
                      android:inputType="text"
                      android:background="@drawable/outline_stroke"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="@dimen/default_margin"/>

            <EditText android:id="@+id/et_update_jam_tutup"
                      android:inputType="text"
                      android:background="@drawable/outline_stroke"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="@dimen/default_margin"/>

            <EditText android:id="@+id/et_update_no_telp"
                      android:inputType="phone"
                      android:background="@drawable/outline_stroke"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="@dimen/default_margin"/>

            <EditText android:id="@+id/et_update_alamat"
                      android:inputType="text"
                      android:background="@drawable/outline_stroke"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="@dimen/default_margin"/>

            <EditText android:id="@+id/et_update_latitude"
                      android:inputType="text"
                      android:background="@drawable/outline_stroke"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="@dimen/default_margin"/>

            <EditText android:id="@+id/et_update_longitude"
                      android:inputType="text"
                      android:background="@drawable/outline_stroke"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="@dimen/default_margin"/>

            <Button android:id="@+id/btn_update_field"
                    android:textAllCaps="false"
                    android:background="@drawable/button_layout"
                    android:textColor="@color/buttonTextColor"
                    android:layout_gravity="end"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/btn_simpan_lap_baru"/>
        </LinearLayout>

</ScrollView>