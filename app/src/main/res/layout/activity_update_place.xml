<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center_vertical"
        style="@style/allmatchparent"
        tools:context=".layouts.info.place.UpdatePlaceActivity">

    <ScrollView
            android:id="@+id/sv_update_place"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                style="@style/allmatchparent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_5"
                android:paddingTop="@dimen/default_padding"
                android:paddingRight="@dimen/padding_5"
                android:paddingBottom="@dimen/default_padding"
                tools:ignore="MissingConstraints">

            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/tv_field_name" />

                <EditText
                        android:id="@+id/et_update_field_name"
                        style="@style/etCreatePlace"
                        android:inputType="text" />

            </LinearLayout>

            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/tv_jamBuka" />

                <EditText
                        android:id="@+id/et_update_jam_buka"
                        style="@style/etCreatePlace"
                        android:inputType="time" />

            </LinearLayout>

            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/tv_jamTutup"/>

                <EditText
                        android:id="@+id/et_update_jam_tutup"
                        style="@style/etCreatePlace"
                        android:inputType="time" />

            </LinearLayout>

            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/tv_noTelp" />

                <EditText
                        android:id="@+id/et_update_no_telp"
                        style="@style/etCreatePlace"
                        android:inputType="text" />

            </LinearLayout>

            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/tv_alamat" />

                <EditText
                        android:id="@+id/et_update_alamat"
                        style="@style/etCreatePlace"
                        android:inputType="text" />

            </LinearLayout>

            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/tv_latitude" />

                <EditText
                        android:id="@+id/et_update_latitude"
                        style="@style/etCreatePlace"
                        android:inputType="numberDecimal|numberSigned" />

            </LinearLayout>

            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/tv_longitude"/>

                <EditText
                        android:id="@+id/et_update_longitude"
                        style="@style/etCreatePlace"
                        android:inputType="numberDecimal|numberSigned" />

            </LinearLayout>

            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/tv_fasilitas" />

                <EditText
                        android:id="@+id/et_update_facility"
                        style="@style/etCreatePlace"
                        android:inputType="textMultiLine"
                        android:lines="3" />

            </LinearLayout>

            <Button
                    android:id="@+id/btn_update_field"
                    style="@style/button"
                    android:layout_marginTop="@dimen/default_margin"
                    android:text="@string/btn_simpan_lap_baru" />
        </LinearLayout>
    </ScrollView>


    <ProgressBar
            android:id="@+id/pb_update_place"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="@+id/sv_update_place"
            app:layout_constraintEnd_toEndOf="@+id/sv_update_place"
            app:layout_constraintStart_toStartOf="@+id/sv_update_place"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>