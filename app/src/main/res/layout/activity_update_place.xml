<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/allmatchparent"
        android:layout_gravity="center_vertical"
        tools:context=".layouts.place.UpdatePlaceActivity">

    <ScrollView
            android:id="@+id/sv_update_place"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                style="@style/allmatchparent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_5"
                android:paddingTop="@dimen/default_padding"
                android:paddingRight="@dimen/padding_5"
                android:paddingBottom="@dimen/default_padding"
                tools:ignore="MissingConstraints">

            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/tv_field_name" />

                <EditText
                        android:id="@+id/et_updt_nama_tempat"
                        style="@style/etCreatePlace"
                        android:inputType="text" />

            </LinearLayout>

            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/tv_jamBuka" />

                <EditText
                        android:id="@+id/et_updt_jamBuka"
                        style="@style/etCreatePlace"
                        android:inputType="time" />

            </LinearLayout>

            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/tv_jamTutup" />

                <EditText
                        android:id="@+id/et_updt_jamTutup"
                        style="@style/etCreatePlace"
                        android:inputType="time" />

            </LinearLayout>

            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/tv_noTelp" />

                <EditText
                        android:id="@+id/et_updt_noTelp"
                        style="@style/etCreatePlace"
                        android:inputType="text" />

            </LinearLayout>

            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/tv_alamat" />

                <EditText
                        android:id="@+id/et_updt_alamat"
                        style="@style/etCreatePlace"
                        android:inputType="text" />

            </LinearLayout>

            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/tv_latitude" />

                <EditText
                        android:id="@+id/et_updt_latitude"
                        style="@style/etCreatePlace"
                        android:inputType="numberDecimal|numberSigned" />

            </LinearLayout>

            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/tv_longitude" />

                <EditText
                        android:id="@+id/et_updt_longitude"
                        style="@style/etCreatePlace"
                        android:inputType="numberDecimal|numberSigned" />

            </LinearLayout>

            <!--            jenis lapangan tersedia-->
            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/jenis" />

                <EditText
                        android:id="@+id/et_updt_jenisLapangan"
                        style="@style/etCreatePlace"
                        android:inputType="text" />

            </LinearLayout>

            <!--            harga lapangan terendah-->
            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/harga_terendah" />

                <EditText
                        android:id="@+id/et_updt_harga_terendah"
                        style="@style/etCreatePlace"
                        android:inputType="number" />

            </LinearLayout>

            <!--            harga lapangan tertinggi-->
            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/harga_tertinggi" />

                <EditText
                        android:id="@+id/et_updt_harga_tertinggi"
                        style="@style/etCreatePlace"
                        android:inputType="number" />

            </LinearLayout>

            <LinearLayout style="@style/linlayCreatePlaceActivity">

                <TextView
                        style="@style/tvCreatePlace"
                        android:text="@string/tv_fasilitas" />

                <EditText
                        android:id="@+id/et_updt_fasilitas"
                        style="@style/etCreatePlace"
                        android:inputType="textMultiLine"
                        android:lines="3" />

            </LinearLayout>

            <Button
                    android:id="@+id/btn_save_newField"
                    style="@style/button"
                    android:layout_marginTop="@dimen/default_margin"
                    android:text="@string/btn_simpan_lap_baru" />

        </LinearLayout>
    </ScrollView>

    <ProgressBar
            android:id="@+id/pb_update_place"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="@+id/sv_update_place"
            app:layout_constraintEnd_toEndOf="@+id/sv_update_place"
            app:layout_constraintStart_toStartOf="@+id/sv_update_place"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>