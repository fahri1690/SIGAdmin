<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="@dimen/default_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".layouts.InputNewField">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:src="@drawable/ic_add_image"
                android:background="@drawable/img_bg"
                android:layout_width="match_parent"
                android:id="@+id/img_new_field"
                android:layout_height="@dimen/image_view_height"
                android:layout_marginBottom="@dimen/default_margin"/>

        <EditText
                android:id="@+id/et_name_field"
                android:inputType="text"
                android:hint="@string/nama_lapangan_hint"
                android:background="@drawable/outline_stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"/>
        <EditText
                android:id="@+id/et_facility"
                android:inputType="text"
                android:hint="@string/fasilitas_hint"
                android:background="@drawable/outline_stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"/>
        <EditText
                android:id="@+id/et_jam_buka"
                android:inputType="number"
                android:hint="@string/jam_buka_hint"
                android:background="@drawable/outline_stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"/>
        <EditText
                android:id="@+id/et_jam_tutup"
                android:inputType="number"
                android:hint="@string/jam_tutup_hint"
                android:background="@drawable/outline_stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"/>
        <EditText
                android:id="@+id/et_no_telp"
                android:inputType="phone"
                android:hint="@string/notelp_hint"
                android:background="@drawable/outline_stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"/>
        <EditText
                android:id="@+id/et_alamat"
                android:inputType="text"
                android:hint="@string/alamat_hint"
                android:background="@drawable/outline_stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"/>
        <EditText
                android:id="@+id/et_latitude"
                android:inputType="number"
                android:hint="@string/latitude_hint"
                android:background="@drawable/outline_stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"/>
        <EditText
                android:id="@+id/et_longitude"
                android:inputType="number"
                android:hint="@string/longitude_hint"
                android:background="@drawable/outline_stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"/>

        <Button
                android:id="@+id/btn_save_new_field"
                android:textAllCaps="false"
                android:background="@drawable/button_layout"
                android:textColor="@color/buttonTextColor"
                android:layout_gravity="end"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/btn_simpan_lap_baru"
        />


    </LinearLayout>
</ScrollView>

