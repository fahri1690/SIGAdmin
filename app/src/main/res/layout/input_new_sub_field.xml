<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:padding="@dimen/default_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".layouts.InputNewSubField">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:src="@drawable/ic_image_black_24dp"
                android:background="@drawable/img_bg"
                android:layout_width="match_parent"
                android:id="@+id/idImageSubField"
                android:layout_height="@dimen/image_view_height"
                android:layout_marginBottom="@dimen/default_margin"/>

        <EditText
                android:inputType="text"
                android:id="@+id/etNamaSubLapangan"
                android:hint="@string/namaSubLapanganHint"
                android:background="@drawable/outline_stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"/>

        <FrameLayout
                android:layout_width="match_parent"
                android:background="@drawable/spinner_bg"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_height="wrap_content">
            <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spn_height"
                    android:entries="@array/jenis_lapangan"
                    android:spinnerMode="dropdown"/>
        </FrameLayout>

        <EditText
                android:inputType="number"
                android:id="@+id/etHargaSiang"
                android:hint="@string/hargaSiangHint"
                android:background="@drawable/outline_stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"/>

        <EditText
                android:inputType="number"
                android:id="@+id/etHargaMalam"
                android:hint="@string/hargaMalamHint"
                android:background="@drawable/outline_stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"/>

        <Button
                android:id="@+id/btnSaveNewSubField"
                android:textAllCaps="false"
                android:background="@drawable/button_layout"
                android:textColor="@color/buttonTextColor"
                android:layout_gravity="end"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/btnSimpanSubLapBaru"/>
    </LinearLayout>

</ScrollView>