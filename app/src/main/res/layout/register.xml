<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/default_padding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        tools:context=".layouts.RegisterActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <ImageView
                android:id="@+id/img_login_icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/account_icon"
                android:contentDescription="@string/login_icon_desc"
                android:layout_marginBottom="@dimen/default_margin"
                android:src="@drawable/ic_account_icon"/>

        <EditText android:id="@+id/et_name_register"
                  android:textColorHint="@color/colorPrimary"
                  android:background="@drawable/outline_stroke"
                  android:layout_marginTop="@dimen/default_margin"
                  android:layout_marginBottom="@dimen/default_margin"
                  android:inputType="text"
                  android:hint="@string/et_nama_admin"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <EditText android:id="@+id/et_email_register"
                  android:textColorHint="@color/colorPrimary"
                  android:background="@drawable/outline_stroke"
                  android:layout_marginBottom="@dimen/default_margin"
                  android:inputType="textEmailAddress"
                  android:hint="@string/et_email"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <EditText android:id="@+id/et_phone_register"
                  android:textColorHint="@color/colorPrimary"
                  android:background="@drawable/outline_stroke"
                  android:layout_marginBottom="@dimen/default_margin"
                  android:inputType="phone"
                  android:hint="@string/et_no_telepon"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <Button android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_layout"
                android:layout_gravity="end"
                android:text="@string/register"
                android:textAllCaps="false"
                android:textColor="@color/buttonTextColor"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_margin="@dimen/default_margin"
                  android:text="@string/sudah_punya_akun"/>

        <Button android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_layout"
                android:layout_gravity="end"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/buttonTextColor"/>

    </LinearLayout>


</ScrollView>


