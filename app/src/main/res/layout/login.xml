<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:padding="@dimen/default_padding"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".layouts.LoginActivity">

    <EditText
            android:textColorHint="@color/colorPrimary"
            android:background="@drawable/outline_stroke"
            android:layout_marginBottom="@dimen/default_margin"
            android:inputType="text"
            android:hint="@string/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <EditText
            android:textColorHint="@color/colorPrimary"
            android:background="@drawable/outline_stroke"
            android:layout_marginBottom="@dimen/default_margin"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_layout"
            android:layout_gravity="end"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@color/buttonTextColor"/>

    <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/forgotPasswordText"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/defaultTextSize"
                android:textColor="@color/colorPrimary"
                android:text="@string/buttonLpSandi" />

        <TextView android:id="@+id/registerText"
                  android:layout_width="0dp"
                  android:layout_marginEnd="50dp"
                  android:layout_height="wrap_content"
                  android:gravity="end"
                  android:layout_weight="3"
                  android:textColor="@color/colorAccent"
                  android:textSize="@dimen/defaultTextSize"
                  android:text="@string/buttonDaftar"
                  android:layout_marginRight="@dimen/rightMargin"/>

    </LinearLayout>

</LinearLayout>