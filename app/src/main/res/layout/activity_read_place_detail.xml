<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".layouts.info.place.ReadPlaceDetailActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvImagesMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_marginTop="@dimen/margin_2"
                          android:paddingLeft="@dimen/padding_5">

                <!--Nama Tempat Futsal-->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="@dimen/widthsize_fielddetail"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:text="@string/tv_field_name"
                                android:textSize="@dimen/textsize_fielddetail"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:text="@string/titik2"
                                android:textSize="@dimen/textsize_fielddetail"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/tv_fnama_lapangan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/default_margin"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:textSize="@dimen/textsize_fielddetail"/>

                    </LinearLayout>
                </LinearLayout>

                <!--Fasilitas-->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="@dimen/widthsize_fielddetail"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:text="@string/tv_fasilitas"
                                android:textSize="@dimen/textsize_fielddetail"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:text="@string/titik2"
                                android:textSize="@dimen/textsize_fielddetail"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                        <TextView
                                android:id="@+id/tv_ffasilitas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/default_margin"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:textSize="@dimen/textsize_fielddetail"/>
                    </LinearLayout>

                </LinearLayout>

                <!--Jam Buka-->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="@dimen/widthsize_fielddetail"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:text="@string/tv_jamBuka"
                                android:textSize="@dimen/textsize_fielddetail"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:text="@string/titik2"
                                android:textSize="@dimen/textsize_fielddetail"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                        <TextView
                                android:id="@+id/tv_fjam_buka"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/default_margin"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:textSize="@dimen/textsize_fielddetail"/>
                    </LinearLayout>

                </LinearLayout>

                <!--Jam Tutup-->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="@dimen/widthsize_fielddetail"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:text="@string/tv_jamTutup"
                                android:textSize="@dimen/textsize_fielddetail"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:text="@string/titik2"
                                android:textSize="@dimen/textsize_fielddetail"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                        <TextView
                                android:id="@+id/tv_fjam_tutup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/default_margin"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:textSize="@dimen/textsize_fielddetail"/>
                    </LinearLayout>

                </LinearLayout>

                <!--No Telepon-->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="@dimen/widthsize_fielddetail"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:text="@string/tv_noTelp"
                                android:textSize="@dimen/textsize_fielddetail"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:text="@string/titik2"
                                android:textSize="@dimen/textsize_fielddetail"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                        <TextView
                                android:id="@+id/tv_fno_telepon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/default_margin"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:textSize="@dimen/textsize_fielddetail"/>
                    </LinearLayout>

                </LinearLayout>

                <!--Alamat-->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="@dimen/widthsize_fielddetail"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:text="@string/tv_alamat"
                                android:textSize="@dimen/textsize_fielddetail"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:text="@string/titik2"
                                android:textSize="@dimen/textsize_fielddetail"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                        <TextView
                                android:id="@+id/tv_falamat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/default_margin"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:textSize="@dimen/textsize_fielddetail"/>
                    </LinearLayout>

                </LinearLayout>

                <!--Latitude-->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="@dimen/widthsize_fielddetail"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:text="@string/tv_latitude"
                                android:textSize="@dimen/textsize_fielddetail"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:text="@string/titik2"
                                android:textSize="@dimen/textsize_fielddetail"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                        <TextView
                                android:id="@+id/tv_flatitude"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/default_margin"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:textSize="@dimen/textsize_fielddetail"/>
                    </LinearLayout>

                </LinearLayout>

                <!--Longitude-->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="@dimen/widthsize_fielddetail"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:text="@string/tv_longitude"
                                android:textSize="@dimen/textsize_fielddetail"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:text="@string/titik2"
                                android:textSize="@dimen/textsize_fielddetail"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                        <TextView
                                android:id="@+id/tv_flongitude"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/default_margin"
                                android:layout_marginBottom="@dimen/default_margin"
                                android:textSize="@dimen/textsize_fielddetail"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <Button
                    android:id="@+id/btn_perbarui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_5"
                    android:layout_margin="@dimen/default_margin"
                    android:background="@drawable/button_ouval"
                    android:text="@string/btn_perbarui"
                    android:textColor="@color/buttonTextColor"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>