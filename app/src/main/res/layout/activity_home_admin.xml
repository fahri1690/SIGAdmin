<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/allmatchparent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        tools:context=".layouts.home.HomeAdminActivity">

    <LinearLayout
            android:id="@+id/linearLayout"
            style="@style/matchwrap"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
                style="@style/matchwrap"
                android:paddingTop="@dimen/default_padding"
                android:paddingBottom="@dimen/default_padding"
                android:elevation="@dimen/default_padding"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="@dimen/default_margin">

            <LinearLayout
                    style="@style/allmatchparent"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                <TextView
                        style="@style/allwrapcontent"
                        android:text="@string/hayy"
                        android:textColor="@color/buttonTextColor"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/ic_account_box_black"
                        android:drawablePadding="@dimen/padding_5"/>

                <TextView
                        android:layout_marginStart="@dimen/default_margin"
                        android:id="@+id/tv_admin"
                        android:layout_width="210dp"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:text="Admin"
                        android:drawablePadding="@dimen/padding_5"/>

                <TextView
                        android:id="@+id/tv_logOut"
                        style="@style/allwrapcontent"
                        android:text="@string/keluar"
                        android:textColor="@color/buttonTextColor"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/ic_exit_to_app_black_24dp"
                        android:drawablePadding="@dimen/padding_5"/>

            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMain"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ib_add_new_place"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/transparent"
            android:foreground="@drawable/add_button"
            app:backgroundTint="#00FFFFFF"
            app:backgroundTintMode="add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>