<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/default_padding"
        tools:context=".layouts.admin.UpdateAdminActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <EditText android:layout_marginTop="@dimen/default_margin"
                  android:id="@+id/et_updt_sub_field_name"
                  android:inputType="text"
                  android:hint="@string/nama_admin_hint"
                  android:background="@drawable/outline_stroke"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/default_margin"/>

        <EditText android:id="@+id/et_updt_harga_siang"
                  android:inputType="number"
                  android:hint="@string/email_admin_hint"
                  android:background="@drawable/outline_stroke"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/default_margin"/>

        <EditText android:id="@+id/et_updt_harga_malam"
                  android:inputType="number"
                  android:hint="@string/notelp_admin_hint"
                  android:background="@drawable/outline_stroke"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/default_margin"/>

        <Button android:id="@+id/btn_updt_admin"
                android:textAllCaps="false"
                android:background="@drawable/button_layout"
                android:textColor="@color/buttonTextColor"
                android:layout_gravity="end"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/btn_simpan_sub_lap_baru"/>
    </LinearLayout>

</ScrollView>