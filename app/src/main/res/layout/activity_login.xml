<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="@dimen/default_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_gravity="center_vertical">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/login_info"
                      android:textStyle="bold"
                      android:textSize="@dimen/fontSz_loginInfo"
                      android:paddingBottom="@dimen/default_padding"/>

            <EditText android:id="@+id/et_email_login"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="@dimen/default_margin"
                      android:background="@drawable/outline_stroke"
                      android:hint="@string/et_email"
                      android:inputType="textEmailAddress"
                      android:textColorHint="@color/colorPrimary"/>

            <EditText android:id="@+id/et_password_login"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="@dimen/default_margin"
                      android:background="@drawable/outline_stroke"
                      android:hint="@string/et_kata_sandi"
                      android:inputType="textPassword"
                      android:textColorHint="@color/colorPrimary"/>

            <TextView
                    android:id="@+id/tv_lupa_sandi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:gravity="end"
                    android:text="@string/lupasandi"
                    android:textColor="@color/colorPrimary"/>

            <Button android:layout_marginTop="@dimen/default_margin"
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="end"
                    android:background="@drawable/button_layout"
                    android:text="@string/tv_masuk"
                    android:textAllCaps="false"
                    android:textColor="@color/buttonTextColor"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>