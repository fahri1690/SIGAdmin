<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/default_padding"
        tools:context=".layouts.SubFieldDetail">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  tools:ignore="MissingConstraints">

        <!--Kode Lapangan-->

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="@dimen/widthsize_fielddetail"
                          android:layout_height="wrap_content"
                          android:text="@string/tv_field_kode"
                          android:textStyle="bold"
                          android:textSize="@dimen/textsize_fielddetail"
                          android:layout_marginBottom="@dimen/default_margin"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/titik2"
                          android:textSize="@dimen/textsize_fielddetail"
                          android:textStyle="bold"
                          android:layout_marginBottom="@dimen/default_margin"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/tv_nama_lapangan"
                          android:textSize="@dimen/textsize_fielddetail"
                          android:layout_marginLeft="@dimen/default_margin"
                          android:layout_marginBottom="@dimen/default_margin"/>

            </LinearLayout>
        </LinearLayout>

        <!--Jenis-->

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="@dimen/widthsize_fielddetail"
                          android:layout_height="wrap_content"
                          android:text="@string/tv_jenis"
                          android:textSize="@dimen/textsize_fielddetail"
                          android:textStyle="bold"
                          android:layout_marginBottom="@dimen/default_margin"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/titik2"
                          android:textSize="@dimen/textsize_fielddetail"
                          android:textStyle="bold"
                          android:layout_marginBottom="@dimen/default_margin"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/tv_fasilitas"
                          android:textSize="@dimen/textsize_fielddetail"
                          android:layout_marginLeft="@dimen/default_margin"
                          android:layout_marginBottom="@dimen/default_margin"/>
            </LinearLayout>

        </LinearLayout>

<!--harga siang-->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="@dimen/widthsize_fielddetail"
                          android:layout_height="wrap_content"
                          android:text="@string/tv_hargaSiag"
                          android:textSize="@dimen/textsize_fielddetail"
                          android:textStyle="bold"
                          android:layout_marginBottom="@dimen/default_margin"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/titik2"
                          android:textSize="@dimen/textsize_fielddetail"
                          android:textStyle="bold"
                          android:layout_marginBottom="@dimen/default_margin"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/tv_jam_buka"
                          android:textSize="@dimen/textsize_fielddetail"
                          android:layout_marginLeft="@dimen/default_margin"
                          android:layout_marginBottom="@dimen/default_margin"/>
            </LinearLayout>

        </LinearLayout>



        <!--No Telepon-->


        <!--Harga Malam-->

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="@dimen/widthsize_fielddetail"
                          android:layout_height="wrap_content"
                          android:text="@string/tv_hargaMalam"
                          android:textSize="@dimen/textsize_fielddetail"
                          android:textStyle="bold"
                          android:layout_marginBottom="@dimen/default_margin"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/titik2"
                          android:textSize="@dimen/textsize_fielddetail"
                          android:textStyle="bold"
                          android:layout_marginBottom="@dimen/default_margin"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/tv_alamat"
                          android:textSize="@dimen/textsize_fielddetail"
                          android:layout_marginLeft="@dimen/default_margin"
                          android:layout_marginBottom="@dimen/default_margin"/>
            </LinearLayout>

        </LinearLayout>

        <!--Latitude-->


        <!--Longitude-->


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/default_margin"
                      android:orientation="vertical">

            <Button android:id="@+id/btn_perbarui"
                    android:textAllCaps="false"
                    android:background="@drawable/button_layout"
                    android:textColor="@color/buttonTextColor"
                    android:layout_gravity="end"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/btn_perbarui"/>




        </LinearLayout>

    </LinearLayout>

</ScrollView>