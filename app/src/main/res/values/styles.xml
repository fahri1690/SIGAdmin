<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--    width height layout-->
    <style name="matchwrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="allwrapcontent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="allmatchparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <!--    Button-->
    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_ouval</item>
        <item name="android:textColor">@color/buttonTextColor</item>
    </style>

    <!--    create place activity-->
    <style name="linlayCreatePlaceActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/padding_5</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="tvCreatePlace">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textSize">@dimen/huruf16</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="etCreatePlace">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/outline_stroke</item>
    </style>"

    <!--    linear layout create field activity-->
    <style name="LinLayCreateField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- create field activity-->
    <style name="tvCreateField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/margin_2</item>
        <item name="android:textSize">@dimen/huruf18</item>
    </style>

    <style name="etCreateField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/outline_stroke</item>
    </style>

    <!-- read place detail activity-->

    <style name="tvPlaceDetail1">
        <item name="android:layout_width">@dimen/widthsize_fielddetail</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/default_margin</item>
        <item name="android:textSize">@dimen/textsize_fielddetail</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tvTitik2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/padding_5</item>
        <item name="android:text">@string/titik2</item>
        <item name="android:textSize">@dimen/textsize_fielddetail</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tvPlaceDetail2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding_5</item>
        <item name="android:textSize">@dimen/textsize_fielddetail</item>
    </style>

    <!--    Field detail activity-->
    <style name="tvFieldDetail">
        <item name="android:layout_width">@dimen/margin_100</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textsize_fielddetail</item>
    </style>

    <style name="tvFieldDetail2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_fielddetail</item>
    </style>

    <style name="ThemeOverlay.FilterButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

</resources>